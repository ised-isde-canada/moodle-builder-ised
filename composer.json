{
    "name": "ised-isde/moodle-builder",
    "license": "GPL-3.0-or-later",
    "description": "ISED Builder for Moodle 4.x",
    "type": "project",
    "homepage": "http://www.ic.gc.ca/",
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "ised-isde/moodle",
                "version": "4",
                "source": {
                    "url": "https://github.com/moodle/moodle.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "ised-isde/moodle-builder-ised",
                "version": "1.0",
                "source": {
                    "url": "https://github.com/ised-isde-canada/moodle-builder-ised.git",
                    "type": "git",
                    "reference": "MOODLE_4X_STABLE"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "ised-isde/moodle-availability_language",
                "version": "1.0",
                "source": {
                    "url": "https://github.com/ewallah/moodle-availability_language.git",
                    "type": "git",
                    "reference": "main"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "ised-isde/moodle-filter_filtercodes",
                "version": "1.0",
                "source": {
                    "url": "https://github.com/michael-milette/moodle-filter_filtercodes.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "ised-isde/moodle-filter_multilang2",
                "version": "1.0",
                "source": {
                    "url": "https://github.com/iarenaza/moodle-filter_multilang2.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "ised-isde/moodle-local_contact",
                "version": "1.0",
                "source": {
                    "url": "https://github.com/michael-milette/moodle-local_contact.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "ised-isde/moodle-local_isedisde",
                "version": "1.0",
                "source": {
                    "url": "https://github.com/ised-isde-canada/moodle-local_isedisde.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "ised-isde/moodle-local_login",
                "version": "1.0",
                "source": {
                    "url": "https://github.com/michael-milette/moodle-local_login.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "ised-isde/moodle-local_mailtest",
                "version": "1.0",
                "source": {
                    "url": "https://github.com/michael-milette/moodle-local_mailtest.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "ised-isde/moodle-mod_subcourse",
                "version": "1.0",
                "source": {
                    "url": "https://github.com/mudrd8mz/moodle-mod_subcourse.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "ised-isde/moodle-theme_gcweb",
                "version": "4.0.30",
                "source": {
                    "url": "https://github.com/michael-milette/moodle-theme_gcweb.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "ised-isde/remote-manage",
                "version": "3.0",
                "type": "library",
                "source": {
                    "url": "https://github.com/ised-isde-canada/remote-manage.git",
                    "type": "git",
                    "reference": "3.0.2"
                }
            }
        },
        {
            "type": "vcs",
            "url": "https://github.com/moodlehq/php-webdriver.git"
        }
    ],
    "extra": {
        "installer-paths": {
            "./dist": ["ised-isde/moodle"],
            "./dist/availability/condition/language": ["ised-isde/moodle-availability_language"],
            "./dist/filter/filtercodes": ["ised-isde/moodle-filter_filtercodes"],
            "./dist/filter/multilang2": ["ised-isde/moodle-filter_multilang2"],
            "./dist/local/contact": ["ised-isde/moodle-local_contact"],
            "./dist/local/isedisde": ["ised-isde/moodle-local_isedisde"],
            "./dist/local/login": ["ised-isde/moodle-local_login"],
            "./dist/local/mailtest": ["ised-isde/moodle-local_mailtest"],
            "./dist/mod/subcourse": ["ised-isde/moodle-mod_subcourse"],
            "./dist/theme/gcweb": ["ised-isde/moodle-theme_gcweb"]
        }
    },
    "require": {
        "php": ">=7.3",
        "mnsami/composer-custom-directory-installer": "1.1.*",
        "aws/aws-sdk-php": "^3.145",
        "ised-isde/remote-manage": "3.0",
        "ised-isde/moodle": "4",
        "ised-isde/moodle-availability_language": "1.0",
        "ised-isde/moodle-filter_filtercodes": "1.0",
        "ised-isde/moodle-filter_multilang2": "1.0",
        "ised-isde/moodle-local_contact": "1.0",
        "ised-isde/moodle-local_isedisde": "1.0",
        "ised-isde/moodle-local_login": "1.0",
        "ised-isde/moodle-local_mailtest": "1.0",
        "ised-isde/moodle-mod_subcourse": "1.0",
        "ised-isde/moodle-theme_gcweb": "4.0.30"
    },
    "scripts": {
        "post-install-cmd": [
            "mv .s2i dist/",
            "mv httpd-cfg dist/",
            "mv php-pre-start dist/",
            "mv dist/php-pre-start/config.php dist/",
            "mv dist/php-pre-start/defaults.php dist/local/",
            "mv dist/composer.* dist/php-pre-start/",
            "shopt -s dotglob && cp -r dist/* .",
            "rm -rf dist",
            "rm README.md",
            "ln -s /opt/app-root/src/vendor/ised-isde/remote-manage/rmanage.php rmanage.php"
        ]
    }
}
